<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#09FFE8"
        android:fontFamily="cursive"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="3 Local Banks in Singapore"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtocbc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#D31313"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/ocbc"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtdbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#DB0BFF"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/dbs"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtuob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#018EFF"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/uob"
        android:textColor="#000000"
        android:textSize="30sp" />

</LinearLayout>